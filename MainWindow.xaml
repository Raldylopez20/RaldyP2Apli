<Window x:Class="RaldyP2Apli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaldyP2Apli"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
         <!--— *******************************MENU ITEMS************************************-->

            <Menu Height = "20" VerticalAlignment = "Top" >

                 <MenuItem Header ="Registros" >
                    <MenuItem x:Name = "Registro" Click="rProyectosMenuItem_Click" Header = "Registro" ></MenuItem>
                    </MenuItem>

                 <MenuItem Header = "Consultas" >            
                    <MenuItem x:Name = "Consultas" Click="cProyectosMenuItem_Click" Header = "Consultas" ></MenuItem>
                    </MenuItem>
            </Menu> 
        </StackPanel>   

         <!--**********************************MENU PRINCIPAL**********************************-->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Label Content="Menu Principal" FontWeight="Bold" Height="50" FontSize="36" HorizontalAlignment="Center" />            

         </StackPanel>
    </Grid>
</Window>
